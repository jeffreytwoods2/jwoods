            srcset="/static/img/jeep/jeep-400w.avif 400w, /static/img/jeep/jeep-600w.avif 600w, /static/img/jeep/jeep-800w.avif 800w, /static/img/jeep/jeep-1000w.avif 1000w, /static/img/jeep/jeep-1200w.avif 1200w, /static/img/jeep/jeep-1600w.avif 1600w, /static/img/jeep/jeep-2000w.avif 2000w, /static/img/jeep/jeep.png 4032w"
